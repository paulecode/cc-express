generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id       Int            @unique @default(autoincrement())
  username String         @unique
  name     String?
  password String
  files    UploadedFile[]
}

model UploadedFile {
  id       Int     @unique @default(autoincrement())
  key      String  @unique
  filename String
  mimetype String
  success  Boolean
  User     User?   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   Int?
}
